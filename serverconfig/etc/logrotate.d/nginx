/var/log/nginx/*.log {
        daily
        missingok
        rotate 7
        compress
        delaycompress
        mail webstats@intra.igowo.de
        mailfirst
        notifempty
        create 640 http log
        sharedscripts
        postrotate
                [ ! -f /var/run/nginx.pid ] || kill -USR1 `cat /var/run/nginx.pid`
        endscript
}
