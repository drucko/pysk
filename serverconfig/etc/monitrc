# Monit control file

set daemon 60
set logfile syslog facility log_daemon
set idfile /var/.monit.id
set statefile /var/.monit.state
set mailserver smtp.gmail.com port 587 username philipp@igowo.de password meeridian4 using TLSV1
set mail-format { from: philipp@igowo.de }
set alert philipp@igowo.de
set httpd port 2812 and
    use address localhost  # only accept connection from localhost
    allow localhost        # allow localhost to connect to the server
    allow mikuru.igowo.de
    ssl enable
    pemfile /etc/ssl/private/star_igowo_de_combined.crt
include /etc/monit.d/*

